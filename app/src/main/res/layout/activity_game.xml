<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="105dp"
            android:orientation="vertical"
            android:background="@drawable/playerback"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/playerOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textColor="#03A7F2"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="6dp"
                android:text=" " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="X"
                android:textColor="#03A7F2"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:background="@drawable/playerback"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playerTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins_medium"
                android:text=" "
                android:textColor="#03A7F2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="O"
                android:textColor="#03A7F2"
                android:textSize="40dp" />
        </LinearLayout>
    </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="center"
       android:gravity="center">

       <LinearLayout
           android:layout_marginTop="30dp"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_width="wrap_content"
           android:orientation="horizontal"
           android:layout_height="wrap_content">

           <androidx.cardview.widget.CardView
               android:background="#03A8F3"
               android:backgroundTint="#03A8F3"
               android:layout_width="120dp"
               android:elevation="12dp"
               android:layout_marginEnd="12dp"
               app:cardCornerRadius="8dp"
               android:layout_height="120dp">
               <TextView
                   android:id="@+id/BoxOne"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:textSize="70dp"
                   android:gravity="center"
                   android:fontFamily="@font/poppins_bold"
                   android:layout_gravity="center"
                   android:text=""/>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:background="#03A8F3"
               android:backgroundTint="#03A8F3"
               android:layout_width="120dp"
               android:elevation="12dp"
               app:cardCornerRadius="8dp"
               android:layout_marginEnd="12dp"
               android:layout_height="120dp">
               <TextView
                   android:id="@+id/BoxTwo"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:textSize="70dp"
                   android:gravity="center"
                   android:fontFamily="@font/poppins_bold"
                   android:layout_gravity="center"
                   android:text=""
                   />
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:background="#03A8F3"
               android:backgroundTint="#03A8F3"
               android:layout_width="120dp"
               android:elevation="12dp"
               app:cardCornerRadius="8dp"
               android:layout_height="120dp">
               <TextView
                   android:id="@+id/BoxThree"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:textSize="70dp"
                   android:gravity="center"
                   android:fontFamily="@font/poppins_bold"
                   android:layout_gravity="center"
                   android:text=""
                   />
           </androidx.cardview.widget.CardView>
       </LinearLayout>
       <LinearLayout
           android:layout_marginTop="30dp"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_width="wrap_content"
           android:orientation="horizontal"
           android:layout_height="wrap_content">

           <androidx.cardview.widget.CardView
               android:background="#03A8F3"
               android:backgroundTint="#03A8F3"
               android:layout_width="120dp"
               android:elevation="12dp"
               android:layout_marginEnd="12dp"
               app:cardCornerRadius="8dp"
               android:layout_height="120dp">
               <TextView
                   android:id="@+id/BoxFour"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:textSize="70dp"
                   android:gravity="center"
                   android:fontFamily="@font/poppins_bold"
                   android:layout_gravity="center"
                   android:text=""
                   />
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:background="#03A8F3"
               android:backgroundTint="#03A8F3"
               android:layout_width="120dp"
               android:elevation="12dp"
               app:cardCornerRadius="8dp"
               android:layout_marginEnd="12dp"
               android:layout_height="120dp">
               <TextView
                   android:id="@+id/BoxFive"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:textSize="70dp"
                   android:gravity="center"
                   android:fontFamily="@font/poppins_bold"
                   android:layout_gravity="center"
                   android:text=""
                   />
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:background="#03A8F3"
               android:backgroundTint="#03A8F3"
               android:layout_width="120dp"
               android:elevation="12dp"
               app:cardCornerRadius="8dp"
               android:layout_height="120dp">
               <TextView
                   android:id="@+id/BoxSix"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:textSize="70dp"
                   android:gravity="center"
                   android:fontFamily="@font/poppins_bold"
                   android:layout_gravity="center"
                   android:text=""
                   />
           </androidx.cardview.widget.CardView>
       </LinearLayout>
       <LinearLayout
           android:layout_marginTop="30dp"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_width="wrap_content"
           android:orientation="horizontal"
           android:layout_height="wrap_content">

           <androidx.cardview.widget.CardView
               android:background="#03A8F3"
               android:backgroundTint="#03A8F3"
               android:layout_width="120dp"
               android:elevation="12dp"
               android:layout_marginEnd="12dp"
               app:cardCornerRadius="8dp"
               android:layout_height="120dp">
               <TextView
                   android:id="@+id/BoxSeven"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:textSize="70dp"
                   android:gravity="center"
                   android:fontFamily="@font/poppins_bold"
                   android:layout_gravity="center"
                   android:text=""
                   />
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:background="#03A8F3"
               android:backgroundTint="#03A8F3"
               android:layout_width="120dp"
               android:elevation="12dp"
               app:cardCornerRadius="8dp"
               android:layout_marginEnd="12dp"
               android:layout_height="120dp">
               <TextView
                   android:id="@+id/BoxEight"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:textSize="70dp"
                   android:gravity="center"
                   android:fontFamily="@font/poppins_bold"
                   android:layout_gravity="center"
                   android:text=""
                   />
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:background="#03A8F3"
               android:backgroundTint="#03A8F3"
               android:layout_width="120dp"
               android:elevation="12dp"
               app:cardCornerRadius="8dp"
               android:layout_height="120dp">
               <TextView
                   android:id="@+id/BoxNine"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:textSize="70dp"
                   android:gravity="center"
                   android:fontFamily="@font/poppins_bold"
                   android:layout_gravity="center"
                   android:text=""
                   />
           </androidx.cardview.widget.CardView>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/layoutBottom"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="30dp">

           <Button
               android:id="@+id/RestartNow"
               android:layout_width="wrap_content"
               android:layout_height="81dp"
               android:layout_gravity="center"
               android:layout_marginEnd="90dp"
               android:background="@drawable/baseline_restart_alt_24" />

           <Button
               android:id="@+id/MainMenu"
               android:layout_width="63dp"
               android:layout_height="match_parent"
               android:background="@drawable/baseline_menu_24" />
       </LinearLayout>


   </LinearLayout>
</LinearLayout>